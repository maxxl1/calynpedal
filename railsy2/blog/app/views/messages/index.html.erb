<div class="header">
  <div class="container">
    <p>Jakiśtam blog</p>
  </div>
</div>

<div class="messages">
  <div class="container">
  
    <% @messages.each do |message| %>
      <div class = "message">
      <p class = "content"><%= message.content %></p>
      <p class = "time"><%=message.created_at %></p>
      <%= link_to 'Usuń post', message, method: :delete %>
    </div>
    <%end%>
    <%=link_to 'Nowy post', "messages/new" %>
  </div>
</div>

